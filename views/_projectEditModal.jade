div#projectEditModal.modal.hide.fade
  div.modal-header
    button.close(data-dismiss="modal", aria-hidden="true") &times;
    h3#myModalLabel Edit project
  div.modal-body
    p 
      label Project name
      input#editProjectName(type="text")
      input#editProjectId(type="hidden")
  div.modal-footer
    button.btn(data-dismiss="modal", aria-hidden="true") Close
    button#updateProject.btn.btn-primary Save changes